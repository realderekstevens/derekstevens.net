server {
        listen 80;
        listen [::]:80;
        root /var/www/mail.derekstevens.net;
        index index.html index.htm index.nginx-debian.html;
        server_name mail.derekstevens.net www.mail.derekstevens.net;
        location / {
                try_files $uri $uri/ =404;
        }
}
